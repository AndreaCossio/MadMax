<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:orientation="vertical"
    android:gravity="bottom">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/nav_header_card"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e0e0e0">

            <ImageView
                android:id="@+id/nav_header_profile_photo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:contentDescription="@string/content_description_profile_photo"
                android:src="@drawable/ic_profile_white"
                android:scaleType="centerCrop"
                android:translationY="8dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
    
    <TextView
        android:id="@+id/nav_header_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingTop="16dp"
        android:hint="@string/profile_nickname"
        style="@style/TextAppearance.MaterialComponents.Headline6" />

    <TextView
        android:id="@+id/nav_header_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/profile_email"
        style="@style/TextAppearance.MaterialComponents.Subtitle2" />

    <include layout="@layout/divider" />

</LinearLayout>
