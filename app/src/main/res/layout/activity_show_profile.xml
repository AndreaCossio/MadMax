<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:background="@drawable/gradientbackground">

        <it.polito.mad.madmax.madmax.CircleImage
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:src="@drawable/person"
            app:civ_border_color="@color/colorTextOnPrimary"
            app:civ_border_width="3dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTextOnPrimary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:padding="16dp"
        android:id="@+id/fields_edit_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="20dp"
            android:hint="@string/name_label"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <include layout="@xml/divider" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_local_post_office_black_24dp"
            android:drawablePadding="20dp"
            android:hint="@string/email_label"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <include layout="@xml/divider" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/location_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location_city_black_24dp"
            android:drawablePadding="20dp"
            android:hint="@string/location_label"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
