<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/nav_item_list">

    <!-- ItemList -->
    <fragment
        android:id="@+id/nav_item_list"
        android:name="it.polito.mad.madmax.lab02.ui.item.ItemListFragment"
        android:label="Item List"
        tools:layout="@layout/item_list_fragment" >
        <action
            android:id="@+id/action_nav_slideshow_to_nav_item"
            app:destination="@id/nav_item" />
        <action
            android:id="@+id/action_nav_item_list_to_nav_profile"
            app:destination="@id/nav_profile" />
    </fragment>

    <!-- Item detail -->
    <fragment
        android:id="@+id/nav_item"
        android:name="it.polito.mad.madmax.lab02.ui.item.DetailsItemFragment"
        android:label="@string/menu_item_details"
        tools:layout="@layout/fragment_details_item" >
        <action
            android:id="@+id/action_edit_item"
            app:destination="@id/nav_edit_item" />
        <argument
            android:name="item"
            app:argType="it.polito.mad.madmax.lab02.data_models.Item"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <!-- Edit Item -->
    <fragment
        android:id="@+id/nav_edit_item"
        android:name="it.polito.mad.madmax.lab02.ui.item.EditItemFragment"
        android:label="ItemDetailsEditFragment" >
        <action
            android:id="@+id/action_save_item"
            app:destination="@+id/nav_item"
            app:popUpTo="@id/nav_item"
            app:popUpToInclusive="true" />
        <argument
            android:name="item"
            app:argType="it.polito.mad.madmax.lab02.data_models.Item"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <!-- User profile -->
    <fragment
        android:id="@id/nav_profile"
        android:name="it.polito.mad.madmax.lab02.ui.profile.ShowProfileFragment"
        android:label="@string/nav_title_show_profile"
        tools:layout="@layout/fragment_show_profile" >
        <action
            android:id="@+id/action_edit_profile"
            app:destination="@id/nav_profile_edit" />
    </fragment>

    <!-- Edit profile -->
    <fragment
        android:id="@+id/nav_profile_edit"
        android:name="it.polito.mad.madmax.lab02.ui.profile.EditProfileFragment"
        android:label="@string/nav_title_edit_profile" >
        <argument
            android:name="user"
            app:argType="it.polito.mad.madmax.lab02.data_models.User"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

</navigation>