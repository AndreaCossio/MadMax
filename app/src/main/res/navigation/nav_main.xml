<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/nav_item_on_sale_fragment">

    <!-- Home -->
    <fragment
        android:id="@+id/nav_item_list_fragment"
        android:name="it.polito.mad.madmax.madmax.ui.item.ItemListFragment"
        android:label="@string/title_list_item_fragment"
        tools:layout="@layout/fragment_item_list" >
        <action
            android:id="@+id/action_details_item"
            app:destination="@id/nav_details_item_fragment" />
        <action
            android:id="@+id/action_edit_item"
            app:destination="@id/nav_edit_item_fragment" />
        <action
            android:id="@+id/action_create_item"
            app:destination="@id/nav_details_item_fragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_item_on_sale_fragment"
        android:name="it.polito.mad.madmax.madmax.ui.item.OnSaleListFragment"
        android:label="@string/title_on_sale_item_fragment"
        tools:layout="@layout/fragment_item_list" >
        <action
            android:id="@+id/action_details_item"
            app:destination="@id/nav_details_item_fragment" />
        <action
            android:id="@+id/action_edit_item"
            app:destination="@id/nav_edit_item_fragment" />
        <action
            android:id="@+id/action_create_item"
            app:destination="@id/nav_details_item_fragment" />
    </fragment>

    <!-- Details item -->
    <fragment
        android:id="@+id/nav_details_item_fragment"
        android:name="it.polito.mad.madmax.madmax.ui.item.DetailsItemFragment"
        android:label="@string/title_details_item_fragment"
        tools:layout="@layout/fragment_details_item" >
        <action
            android:id="@+id/action_edit_item"
            app:destination="@id/nav_edit_item_fragment" />
        <argument
            android:name="item"
            app:argType="it.polito.mad.madmax.madmax.data.model.Item"
            app:nullable="true"
            android:defaultValue="@null"/>
    </fragment>

    <!-- Edit item -->
    <fragment
        android:id="@+id/nav_edit_item_fragment"
        android:name="it.polito.mad.madmax.madmax.ui.item.EditItemFragment"
        android:label="@string/title_edit_item_fragment"
        tools:layout="@layout/fragment_edit_item" >
        <action
            android:id="@+id/action_save_item"
            app:destination="@id/nav_details_item_fragment"
            app:popUpTo="@id/nav_details_item_fragment"
            app:popUpToInclusive="true"/>
        <argument
            android:name="item"
            app:argType="it.polito.mad.madmax.madmax.data.model.Item"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <!-- Show profile -->
    <fragment
        android:id="@+id/nav_show_profile_fragment"
        android:name="it.polito.mad.madmax.madmax.ui.profile.ShowProfileFragment"
        android:label="@string/title_show_profile_fragment"
        tools:layout="@layout/fragment_show_profile" >
        <action
            android:id="@+id/action_edit_profile"
            app:destination="@id/nav_edit_profile_fragment" />
        <argument
            android:name="user"
            app:argType="it.polito.mad.madmax.madmax.data.model.User"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <!-- Edit profile -->
    <fragment
        android:id="@+id/nav_edit_profile_fragment"
        android:name="it.polito.mad.madmax.madmax.ui.profile.EditProfileFragment"
        android:label="@string/title_edit_profile_fragment"
        tools:layout="@layout/fragment_edit_profile">
        <action
            android:id="@+id/action_save_profile"
            app:destination="@id/nav_show_profile_fragment"
            app:popUpTo="@id/nav_show_profile_fragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>